
    <main class="main-content">
        <div class="container">
            <h1>Omasivu</h1>
            
            <!-- Käyttäjätiedot näkymä -->
            <div class="profile-section">
                <div class="profile-header">
                    <h2>Käyttäjätiedot</h2>
                    <button class="edit-btn" id="editBtn">Muokkaa tietoja</button>
                </div>
                
                <!-- Tietojen näyttö -->
                <div class="profile-display" id="profileDisplay">
                    <div class="info-group">
                        <label>Etunimi:</label>
                        <span class="info-value"><%= user.fname || user.etunimi %></span>
                    </div>
                    <div class="info-group">
                        <label>Sukunimi:</label>
                        <span class="info-value"><%= user.lname || user.sukunimi %></span>
                    </div>
                    <div class="info-group">
                        <label>Sähköposti:</label>
                        <span class="info-value"><%= user.email || user.sahkoposti %></span>
                    </div>
                    <div class="info-group">
                        <label>Rekisteröitynyt:</label>
                        <span class="info-value"><%= new Date(user.createdAt || user.luotu).toLocaleDateString('fi-FI') %></span>
                    </div>
                </div>
                
                <!-- Muokkauslomake (piilotettu aluksi) -->
                <form class="profile-form" id="profileForm" style="display: none;" action="/paivita-profiili" method="POST">
                    <div class="form-group">
                        <label for="fname">Etunimi:</label>
                        <input type="text" id="fname" name="fname" value="<%= user.fname || user.etunimi %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="lname">Sukunimi:</label>
                        <input type="text" id="lname" name="lname" value="<%= user.lname || user.sukunimi %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Sähköposti:</label>
                        <input type="email" id="email" name="email" value="<%= user.email || user.sahkoposti %>" required>
                    </div>
                    
                    <div class="form-buttons">
                        <button type="submit" class="save-btn">Tallenna muutokset</button>
                        <button type="button" class="cancel-btn" id="cancelBtn">Peruuta</button>
                    </div>
                </form>
            </div>
            
            <!-- Salasanan vaihto -->
            <div class="password-section">
                <h2>Vaihda salasana</h2>
                <form class="password-form" action="/vaihda-salasana" method="POST">
                    <div class="form-group">
                        <label for="nykyinenSalasana">Nykyinen salasana:</label>
                        <input type="password" id="nykyinenSalasana" name="nykyinenSalasana" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="uusiSalasana">Uusi salasana:</label>
                        <input type="password" id="uusiSalasana" name="uusiSalasana" required minlength="6">
                    </div>
                    
                    <div class="form-group">
                        <label for="vahvistaSalasana">Vahvista uusi salasana:</label>
                        <input type="password" id="vahvistaSalasana" name="vahvistaSalasana" required minlength="6">
                    </div>
                    
                    <button type="submit" class="save-btn">Vaihda salasana</button>
                </form>
            </div>
            
            <!-- Tilin poisto -->
            <div class="danger-section">
                <h2>Vaarallinen alue</h2>
                <div class="warning-box">
                    <p><strong>Varoitus:</strong> Tilin poistaminen on peruuttamaton toimenpide. Kaikki tietosi poistetaan pysyvästi.</p>
                    <button class="danger-btn" id="deleteAccountBtn">Poista tili</button>
                </div>
            </div>
        </div>
   
    
    <!-- Vahvistus-modal tilin poistoa varten -->
    <div class="modal" id="deleteModal">
        <div class="modal-content">
            <h3>Vahvista tilin poisto</h3>
            <p>Oletko varma, että haluat poistaa tilisi? Tämä toimenpide on peruuttamaton.</p>
            <p>Kirjoita "<strong>POISTA</strong>" vahvistaaksesi:</p>
            <form id="deleteForm" action="/poista-tili" method="POST">
                <input type="text" id="confirmText" placeholder="Kirjoita POISTA" required>
                <div class="modal-buttons">
                    <button type="submit" class="danger-btn" id="confirmDeleteBtn" disabled>Poista tili</button>
                    <button type="button" class="cancel-btn" id="cancelDeleteBtn">Peruuta</button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Viesti-alue -->
    <% if (typeof viesti !== 'undefined' && viesti) { %>
        <div class="message <%= viesti.tyyppi %>">
            <%= viesti.sisalto %>
        </div>
    <% } %>
</main> 
