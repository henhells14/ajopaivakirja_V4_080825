<main>
    <div class="register-container" id="register-container">
        
        <!-- Virheviestin näyttäminen -->
        <% if (locals.error) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
        <% } %>
        
        <!-- Onnistumis viestin näyttäminen -->
        <% if (locals.success) { %>
            <div class="alert alert-success">
                <%= success %>
            </div>
        <% } %>
        
        <form action="/rekisteroidy" method="POST">
            <h1>Rekisteröidy käyttäjäksi</h1>
            <p>Ole hyvä ja täytä alla olevat tiedot.</p>

            <div class="user-details">
                <div class="input-box">
                    <span class="details">Etunimi</span>
                    <input type="text" name="fname" placeholder="Anna etunimi" id="fname" required>
                </div>
                <div class="input-box">
                    <span class="details">Sukunimi</span>
                    <input type="text" name="lname" placeholder="Anna sukunimi" id="lname" required>
                </div>
                <div class="input-box">
                    <span class="details">Sähköposti</span>
                    <input type="email" name="email" placeholder="Anna sähköpostiosoite" id="email" required>
                </div>
                <div class="input-box">
                    <span class="details">Salasana</span>
                    <input type="password" name="password" placeholder="Syötä salasana" id="password" required>
                </div>
            </div> 
            <div class="button">
                <input type="submit" id="submit" value="Rekisteröidy">
            </div>
        </form>
    </div>
    
    <div class="container-signin">
        <p>Oletko jo käyttäjä? <a href="/kirjaudu-sisaan">Kirjaudu sisään</a>.</p>
    </div>
</main>

